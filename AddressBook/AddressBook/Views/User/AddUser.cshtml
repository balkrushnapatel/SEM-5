@model AddressBook.Models.UserModel

<div class="pagetitle">
    <h1>User Add</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="User" asp-action="UserList">User</a></li>
            <li class="breadcrumb-item active">User Add</li>
        </ol>
    </nav>
</div>


<form asp-controller="User" asp-action="UserSave" method="post">
    <div class="col-12">
        <label asp-for="UserName" class="form-label fw-bold"><span class="text-danger">*</span>User Name</label>
        <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Enter User Name">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="MobileNo" class="form-label fw-bold"><span class="text-danger">*</span>Mobile No</label>
        <input asp-for="MobileNo" type="number" class="form-control" id="MobileNo" placeholder="Enter Mobile Number">
        <span asp-validation-for="MobileNo" class="text-danger"></span>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="EmailId" class="form-label fw-bold"><span class="text-danger">*</span>Email ID</label>
        <input asp-for="EmailId" type="email" class="form-control" id="EmailId" placeholder="Enter Email Id">
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>
    
    <div class="text-center">
        <button type="submit" class="btn btn-sm btn-success">Save</button>
        <a asp-controller="User" asp-action="UserList" type="button" class="btn btn-sm btn-primary">Cancel</a>
    </div>
</form>
